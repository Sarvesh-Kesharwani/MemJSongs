<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_shape"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="409dp"
        android:layout_height="351dp"
        android:src="@drawable/music_logo"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="-3dp" />

    <Button
        android:id="@+id/back_btn"
        android:layout_width="138dp"
        android:layout_height="112dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="9dp"
        android:background="@drawable/back_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/back_btn2"
        android:layout_width="115dp"
        android:layout_height="94dp"
        android:background="@drawable/back_icon"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="514dp" />

    <Button
        android:id="@+id/forward_btn"
        android:layout_width="137dp"
        android:layout_height="112dp"
        android:layout_marginTop="9dp"
        android:background="@drawable/forward_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.867"
        app:layout_constraintStart_toEndOf="@+id/back_btn"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/forward_btn2"
        android:layout_width="114dp"
        android:layout_height="92dp"
        android:background="@drawable/forward_icon"
        tools:layout_editor_absoluteX="282dp"
        tools:layout_editor_absoluteY="516dp" />

    <Button
        android:id="@+id/pause_btn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="23dp"
        android:layout_marginEnd="46dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/pause_icon"
        app:layout_constraintBottom_toTopOf="@+id/play_btn2"
        app:layout_constraintEnd_toStartOf="@+id/forward_btn2"
        app:layout_constraintHorizontal_bias="0.954"
        app:layout_constraintStart_toEndOf="@+id/back_btn2" />

    <Button
        android:id="@+id/play_btn"
        android:layout_width="58dp"
        android:layout_height="59dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/play_arrow"
        app:layout_constraintBottom_toTopOf="@+id/pause_btn"
        app:layout_constraintEnd_toStartOf="@+id/forward_btn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/back_btn"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/play_btn2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/play_arrow"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="176dp" />


</androidx.constraintlayout.widget.ConstraintLayout>